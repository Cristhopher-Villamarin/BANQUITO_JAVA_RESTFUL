<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: 2024-01-01"
            android:textColor="@color/bg"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textFormaPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forma de pago: EFECTIVO"
            android:textColor="@color/bg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal: $0.00"
            android:textColor="@color/bg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descuento: $0.00"
            android:textColor="@color/bg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: $0.00"
            android:textColor="@color/bg"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: PAGADA"
            android:textColor="@color/bg"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ver detalle"
            android:textColor="@color/bg"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/accent"
            app:cornerRadius="12dp"
            app:iconTint="@color/bg"
            android:elevation="2dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
